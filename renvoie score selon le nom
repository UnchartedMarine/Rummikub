#include <stdio.h>
#include <string.h>
int score(char nom)
{
    FILE* fichier = NULL;
    char caractereActuel [10];
    int score;
 
    fichier = fopen("tab_score", "r");
 
    if (fichier != NULL)
    {
        while(strcmp(caractereActuel,nom) != 0)
        {
            fscanf(fichier, "%s;%d", &caractereActuel, &score);
        }
        printf("%d", score);
        fclose(fichier);
    }
 
    return score;
}
